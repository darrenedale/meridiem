{
    "name": "darrenedale/meridiem",
    "type": "library",
    "description": "PHP Gregorian Date Library",
    "keywords": [
        "date",
        "time",
        "Gregorian",
        "calendar"
    ],
    "homepage": "https://github.com/darrenedale/Meridiem",
    "license": "MIT",
    "authors": [
        {
            "name": "Darren Edale",
            "email": "darren@equit.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Meridiem\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MeridiemTests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
